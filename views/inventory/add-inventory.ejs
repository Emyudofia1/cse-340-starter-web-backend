<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<!-- Display flash messages -->
<% if (notice) { %>
  <p class="notice"><%= notice %></p>
<% } %>

<!-- Display validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="errors">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-inventory" method="POST">
  <label for="inv_make">Make:</label>
  <input 
    type="text" 
    id="inv_make" 
    name="inv_make" 
    required 
    value="<%= formData.inv_make || '' %>"
  >

  <label for="inv_model">Model:</label>
  <input 
    type="text" 
    id="inv_model" 
    name="inv_model" 
    required 
    value="<%= formData.inv_model || '' %>"
  >

  <label for="inv_year">Year:</label>
  <input 
    type="number" 
    id="inv_year" 
    name="inv_year" 
    required 
    min="1900" 
    value="<%= formData.inv_year || '' %>"
  >

  <label for="inv_price">Price:</label>
  <input 
    type="number" 
    id="inv_price" 
    name="inv_price" 
    step="0.01" 
    required 
    value="<%= formData.inv_price || '' %>"
  >

  <label for="inv_miles">Mileage:</label>
  <input 
    type="number" 
    id="inv_miles" 
    name="inv_miles" 
    step="0.01" 
    required 
    value="<%= formData.inv_miles || '' %>"
  >

  <label for="inv_color">Color:</label>
  <input 
    type="text" 
    id="inv_color" 
    name="inv_color" 
    required 
    value="<%= formData.inv_color || '' %>"
  >

  <label for="classification_id">Classification:</label>
  <!-- This HTML is built by the controller and handles sticky selection -->
  <%- classificationList %>

  <label for="inv_description">Description:</label>
  <textarea 
    id="inv_description" 
    name="inv_description" 
    required
  ><%= formData.inv_description || '' %></textarea>

  <label for="inv_image">Image URL:</label>
  <input 
    type="text" 
    id="inv_image" 
    name="inv_image" 
    value="<%= formData.inv_image || '' %>"
  >

  <label for="inv_thumbnail">Thumbnail URL:</label>
  <input 
    type="text" 
    id="inv_thumbnail" 
    name="inv_thumbnail" 
    value="<%= formData.inv_thumbnail || '' %>"
  >

  <button type="submit">Add Vehicle</button>
</form>
