<h1>Account Management</h1>

<!-- Flash Message -->
<% if (messages && messages.notice && messages.notice.length > 0) { %>
  <div class="notice">
    <%= messages.notice[0] %>
  </div>
<% } %>

<!-- Welcome Message -->
<h2>Welcome <%= firstName %></h2>

<!-- Update Account Link (Visible to ALL users) -->
<p>
  <a href="/account/update/<%= account_id %>">
    Update Account Information
  </a>
</p>

<!-- Inventory Management (ONLY for Employee or Admin) -->
<% if (account_type === "Employee" || account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inventory/">
      Manage Inventory
    </a>
  </p>
<% } %>

